{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "module": "esnext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "noErrorTruncation": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "target": "ES2022"
    },
    "include": [
        ".next/types/**/*.ts",
        "next-env.d.ts",
        "next.config.js",
        "src/**/*.ts",
        "src/**/*.tsx",
        "vitest.config.mts",
        "vitest.globalSetup.ts",
        "vitest.setup.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
